<%- include('includes/head'); %>
    <%- include('includes/nav'); %>
        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-4">
                    <h1 class="text-center">Login</h1>
                    <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

                    <%- include('includes/messages'); %>

                    <% if(!user) { %>
                    <div class="row">
                        <div class="col-lg my-4">
                            <h4>Faça seu cadastro</h4>
                            <p>Preencha os campos para concluir o seu cadastro:</p>
                            <form class="form-cadastro" action="/login/register" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group">
                                    <label>Seu nome</label>
                                    <input type="text" class="form-control" name="nome">
                                </div>
                                <div class="form-group">
                                    <label>Seu email</label>
                                    <input type="email" class="form-control form-nome" name="email">
                                </div>
                                <div class="form-group">
                                    <label>Sua senha</label>
                                    <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Criar</button>
                            </form>
                        </div>
                        <div class="col-lg my-4">
                            <h4>Faça seu login</h4>
                            <p>Preencha os campos para fazer o seu login:</p>
                            <form class="form-login" action="/login/login" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group">
                                    <label>Seu email</label>
                                    <input type="email" class="form-control" name="email">
                                </div>
                                <div class="form-group">
                                    <label>Sua senha</label>
                                    <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-primary">Entrar</button>
                            </form>
                        </div>
                    </div>
                </div>

                <% } else { %> 
                    
                <% } %>


                <div class="responsive-table"></div>

                <div class="col-lg-2"></div>
            </div>
        </div>
        <%- include('includes/footer'); %>